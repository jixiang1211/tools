/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 通用样式 */
.container {
  padding: 20px;
}

.btn-primary {
  background-color: #0066ff;
  color: white;
  border-radius: 8px;
  padding: 12px 20px;
  text-align: center;
  margin: 10px 0;
}

.btn-primary:active {
  background-color: #0052cc;
}
