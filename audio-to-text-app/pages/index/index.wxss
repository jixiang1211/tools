.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 标题样式 */
.title {
  text-align: center;
  margin: 30px 0 40px 0;
}

.title text {
  font-size: 32px;
  font-weight: bold;
  color: white;
}

/* 录音区域 */
.recording-area {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40px 0;
}

/* 正在录音的样式 */
.recording-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: pulse 1.5s ease-in-out infinite;
}

.recording-icon {
  font-size: 80px;
  margin-bottom: 20px;
}

.recording-text text {
  font-size: 20px;
  color: white;
  font-weight: bold;
}

.recording-time {
  margin-top: 20px;
}

.recording-time text {
  font-size: 48px;
  color: white;
  font-weight: bold;
  font-family: 'Courier New', monospace;
}

/* 没有录音时的样式 */
.no-recording-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  font-size: 80px;
  margin-bottom: 20px;
  opacity: 0.8;
}

.no-recording-info text {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.8);
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 15px;
  margin-bottom: 20px;
}

.btn {
  flex: 1;
  height: 50px;
  border-radius: 10px;
  font-size: 16px;
  font-weight: bold;
  color: white;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-start {
  background-color: #5ba3f5;
}

.btn-start:active:not([disabled]) {
  background-color: #4a94e6;
}

.btn-stop {
  background-color: #f56a6a;
}

.btn-stop:active:not([disabled]) {
  background-color: #e65555;
}

.btn[disabled] {
  opacity: 0.5;
  background-color: #999;
}

/* 识别按钮 */
.btn-recognize {
  width: 100%;
  height: 50px;
  border-radius: 10px;
  background-color: #4CAF50;
  color: white;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}

.btn-recognize:active:not([disabled]) {
  background-color: #45a049;
}

.btn-recognize[disabled] {
  opacity: 0.5;
  background-color: #999;
}

/* 状态提示 */
.tip {
  text-align: center;
  padding: 15px;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  min-height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tip text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.9);
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}
