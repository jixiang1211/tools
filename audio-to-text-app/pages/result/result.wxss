.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20px;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.btn-back {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 8px;
  padding: 8px 16px;
  font-size: 14px;
  border: none;
  min-width: 80px;
}

.btn-back:active {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 标题 */
.title {
  text-align: center;
  margin-bottom: 30px;
}

.title text {
  font-size: 28px;
  font-weight: bold;
  color: white;
}

/* 结果内容区域 */
.result-content {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30px;
}

.result-text {
  background-color: white;
  border-radius: 15px;
  padding: 25px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  max-width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  min-height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.result-text text {
  font-size: 18px;
  color: #333;
  line-height: 1.6;
  text-align: center;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 15px;
  margin-bottom: 20px;
}

.btn {
  flex: 1;
  height: 50px;
  border-radius: 10px;
  font-size: 16px;
  font-weight: bold;
  color: white;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-copy {
  background-color: #4CAF50;
}

.btn-copy:active {
  background-color: #45a049;
}

.btn-share {
  background-color: #2196F3;
}

.btn-share:active {
  background-color: #0b7dda;
}

/* 返回首页按钮 */
.btn-home {
  width: 100%;
  height: 50px;
  border-radius: 10px;
  background-color: #ff9800;
  color: white;
  font-size: 18px;
  font-weight: bold;
  border: none;
}

.btn-home:active {
  background-color: #e68900;
}

/* 响应式设计 */
@media (max-height: 600px) {
  .result-content {
    flex: 0.5;
    margin-bottom: 15px;
  }

  .result-text {
    padding: 15px;
    min-height: 70px;
  }

  .result-text text {
    font-size: 16px;
  }
}
