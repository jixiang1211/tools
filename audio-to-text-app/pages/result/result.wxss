.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
  color: white;
  position: relative;
}

/* ===== 顶部导航栏 ===== */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-lg);
  background-color: rgba(0, 0, 0, 0.2);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
}

.btn-back {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: var(--radius-md);
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  border: none;
  min-width: 100rpx;
  transition: all 0.2s ease;
}

.btn-back:active {
  background-color: rgba(255, 255, 255, 0.35);
  transform: translateY(1rpx);
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

/* ===== 滚动视图 ===== */
.scroll-view {
  flex: 1;
  overflow: hidden;
}

/* ===== 卡片分组 ===== */
.card-section {
  padding: var(--spacing-lg);
}

/* 卡片样式优化 */
.card {
  background-color: var(--color-white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  box-shadow: var(--shadow-lg);
  margin-bottom: var(--spacing-md);
}

.card-lg {
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-xl);
}

/* 分组标签 */
.section-label {
  font-size: 24rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* ===== 识别结果文本 ===== */
.result-text {
  font-size: 36rpx;
  color: var(--color-text);
  line-height: 1.8;
  word-break: break-all;
  padding: var(--spacing-md);
  background-color: #f5f5f5;
  border-radius: var(--radius-md);
  border-left: 4rpx solid var(--color-primary);
  margin-bottom: var(--spacing-md);
}

/* ===== 快速操作按钮 ===== */
.quick-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.btn-icon {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-md);
  background-color: #f5f5f5;
  border-radius: var(--radius-md);
  border: none;
  transition: all 0.2s ease;
}

.btn-icon:active {
  background-color: #efefef;
  transform: translateY(1rpx);
}

.btn-icon .icon {
  font-size: 36rpx;
  line-height: 1;
}

.btn-icon .label {
  font-size: 24rpx;
  color: var(--color-text);
  font-weight: 500;
}

/* ===== 翻译并朗读主按钮 ===== */
.btn-translate-speak {
  width: 100%;
  height: 70rpx;
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  box-shadow: var(--shadow-lg);
}

.btn-translate-speak:active:not([disabled]) {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

/* ===== 粤语翻译文本 ===== */
.translation-text {
  font-size: 36rpx;
  color: var(--color-text);
  line-height: 1.8;
  word-break: break-all;
  padding: var(--spacing-md);
  background-color: #f5f5f5;
  border-radius: var(--radius-md);
  border-left: 4rpx solid var(--color-danger);
  margin-bottom: var(--spacing-md);
}

/* ===== 语音选择器 ===== */
.voice-selector {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-md);
  background-color: #fafafa;
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-md);
}

.voice-label {
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
  min-width: 60rpx;
}

.voice-options {
  display: flex;
  gap: var(--spacing-md);
  flex: 1;
}

.voice-option {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm);
  background-color: white;
  border: 1rpx solid var(--color-border);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all 0.2s ease;
}

.voice-option.active {
  background-color: var(--color-primary);
  border-color: var(--color-primary);
  color: white;
}

.voice-option text {
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
}

.voice-option.active text {
  color: white;
}

/* ===== TTS 控制按钮 ===== */
.tts-actions {
  display: flex;
  gap: var(--spacing-md);
}

/* ===== 全局按钮样式 ===== */
.btn {
  transition: all 0.2s ease;
}

.btn-primary {
  background-color: var(--color-primary);
  color: white;
  border-radius: var(--radius-md);
  padding: 24rpx 32rpx;
  text-align: center;
  font-weight: 600;
  border: none;
}

.btn-primary:active:not([disabled]) {
  background-color: var(--color-primary-dark);
  box-shadow: var(--shadow-md);
  transform: translateY(1rpx);
}

.btn-primary[disabled] {
  background-color: var(--color-text-disabled);
  opacity: 0.6;
}

.btn-secondary {
  flex: 1;
  background-color: white;
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  border-radius: var(--radius-md);
  padding: 20rpx 28rpx;
  font-weight: 500;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

.btn-secondary:active:not([disabled]) {
  background-color: var(--color-primary);
  color: white;
  transform: translateY(1rpx);
}

.btn-secondary[disabled] {
  opacity: 0.5;
}

/* ===== 加载覆盖层 ===== */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: var(--spacing-md);
  z-index: 99;
  backdrop-filter: blur(4px);
}

.loader-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spinner 1s linear infinite;
}

@keyframes spinner {
  to {
    transform: rotate(360deg);
  }
}

.loader-text {
  font-size: 32rpx;
  color: white;
  font-weight: 600;
}

/* ===== 响应式设计 ===== */
@media (max-height: 800rpx) {
  .card-section {
    padding: var(--spacing-md);
  }

  .card {
    padding: var(--spacing-md);
  }

  .card-lg {
    padding: var(--spacing-lg);
  }
}

/* ===== 工具类 ===== */
.mt-xs { margin-top: var(--spacing-xs); }
.mt-sm { margin-top: var(--spacing-sm); }
.mt-md { margin-top: var(--spacing-md); }
.mt-lg { margin-top: var(--spacing-lg); }

.mb-xs { margin-bottom: var(--spacing-xs); }
.mb-sm { margin-bottom: var(--spacing-sm); }
.mb-md { margin-bottom: var(--spacing-md); }
.mb-lg { margin-bottom: var(--spacing-lg); }
